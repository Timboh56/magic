.static-page-container
	%h1 RSS Feeds Retweeter
	.row
		DopeMagic will check RSS Feeds daily for new content and retweet from signed in twitter account.

	- if current_user
		.row
			Currently signed in as
			%b
				= current_user.name
		%hr
		= form_tag "/rss/save", { method: :put } do
			.row
				.col-xs-3
					= label_tag "RSS Feed URLs (commas separated): "
				.col-xs-9
					= text_area_tag :rss_feeds, @rss_feed_collection.rss_feeds.present? ? @rss_feed_collection.rss_feeds.map! { |r| r.url }.join(",") : "", { required: true }
			.row
				.col-xs-3
					= label_tag "Tags (commas separated)"
				.col-xs-9
					= text_area_tag :tags, @tags.present? ? @tags.map! { |t| t.text }.join(",") : ""
			.row
				.col-xs-12
					= submit_tag "Save", { class: "btn btn-default"}
	- else
		%div#user_nav
		= link_to "Sign in with Twitter", "/auth/twitter", { class: "btn btn-default" }